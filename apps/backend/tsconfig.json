{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "jsx": "react-jsx",

    "module": "commonjs",
    "moduleResolution": "node",

    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,

    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,

    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
